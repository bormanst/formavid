# regenerate roundup tracker mysql password
PASSWORD=`head /dev/urandom | tr -dc A-Za-z0-9 | head -c 13 ; echo ''`

CONF=/etc/roundup/tracker-config.ini
sed -i "s/^password = \(.*\)/password = ${PASSWORD}/" $CONF

${FORMAVID}/bin/initialize/python/mysqlconf.py --user=roundup --pass="${PASSWORD}"
