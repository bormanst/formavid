# will be skipped if REBOOT set to SKIP

reboot() {
    shutdown -r now
}

if [ "${REBOOT}" == "SKIP" ] || [ -z "${PASSWORDS_ONLY}" ]; then
    ${FORMAVID}/bin/initialize/python/reboot-ask.py && reboot
fi

exit 0
